<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple"
    tools:context=".ManuBar">

    <LinearLayout
        android:background="@drawable/tab_bkg"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".AddressPage">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/txtEnterAddress"
                android:text="Enter your Address"
                android:textSize="18sp"
                android:textColor="@color/darkGrey"
                android:layout_marginTop="13dp"
                android:fontFamily="@font/poppins_semibold"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:id="@+id/edtName"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:hint="Enter Your name"
                android:drawablePadding="8dp"
                android:background="@drawable/address_bkg"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:id="@+id/edtNumber"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:hint="Enter Your Mobile Number"
                android:drawablePadding="8dp"
                android:background="@drawable/address_bkg"
                android:inputType="phone"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:id="@+id/edtHouseno"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:hint="House number / Street"
                android:drawablePadding="8dp"
                android:background="@drawable/address_bkg"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:id="@+id/edtArea"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:hint="Area"
                android:drawablePadding="8dp"
                android:background="@drawable/address_bkg"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:inputType="none"
                    android:textColor="@color/midGrey"
                    android:background="@drawable/address_bkg"
                    android:text="Choose City"/>

            </com.google.android.material.textfield.TextInputLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:id="@+id/edtPIN"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:hint="PIN"
                android:drawablePadding="8dp"
                android:inputType="number"
                android:background="@drawable/address_bkg"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:id="@+id/txtDate"
                android:padding="10dp"
                android:textSize= "19sp"
                android:text="Pick Up Date"
                android:textColor="@color/midGrey"
                android:drawableStart="@drawable/baseline_calendar_month_24"
                android:drawablePadding="8dp"
                android:inputType="number"
                android:background="@drawable/address_bkg"
                tools:ignore="TextFields" />

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/tab_background"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:textColor="@color/white"
                android:id="@+id/btnSubmit"
                android:textSize="15sp"
                android:text="Submit"
                app:cornerRadius="10dp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
