<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OrderList">

    <androidx.cardview.widget.CardView
        android:id="@+id/orderListCard"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="100dp"
        android:visibility="invisible"
        app:cardBackgroundColor="@color/purple"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/orderType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="12sp"
                android:layout_marginTop="10dp"
                android:text="Order ID:- 7d514cr4d"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/orderDetali"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="12sp"
                android:layout_marginTop="15dp"
                android:text="Order Numbedr"
                android:textColor="@color/white"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/delevery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="12sp"
                android:layout_marginTop="5dp"
                android:text="Scheduled Date: - "
                android:textColor="@color/white"
                android:textSize="11sp" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCancel"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/btn_background_2"
            android:text="Calcel Order"
            android:textColor="@color/white"
            android:textSize="9sp"
            app:cornerRadius="10dp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/noOrderYet"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginHorizontal="45dp"
        android:layout_marginTop="50dp"
        android:visibility="visible"
        app:cardBackgroundColor="@color/purple"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="27dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="No Order Yet!"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp" />


    </androidx.cardview.widget.CardView>

</LinearLayout>